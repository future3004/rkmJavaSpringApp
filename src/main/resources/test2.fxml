<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.SecondaryController">
    <children>
        <Label layoutX="256.0" layoutY="10.0" text="EDIT EMPLOYEE(S)" />
        <Text layoutX="150.0" layoutY="70.0" text="Employee Email : " />
        <TextField fx:id="email_edit" layoutX="270.0" layoutY="54.0" />
        <Button fx:id="editSubmitBtn" layoutX="500.0" layoutY="54.0" mnemonicParsing="false" onAction="#fetchEmployeeInfo" text="SUBMIT"/>

        <Label layoutX="240.0" layoutY="115.0" text="Employee Data/Info" />
        <Text layoutX="200.0" layoutY="155.0" text="Current Info" />
        <Text layoutX="430.0" layoutY="155.0" text="Update Info" />

        <Text layoutX="50.0" layoutY="185.0"  text="First Name : " />
        <Text fx:id="emp_FName" layoutX="180.0" layoutY="185.0" strokeType="OUTSIDE" strokeWidth="0.0"  wrappingWidth="69.677734375" />
        <Text layoutX="50.0" layoutY="215.0"  text="Last Name : " />
        <Text fx:id="emp_LName" layoutX="180.0" layoutY="215.0" />
        <Text layoutX="50.0" layoutY="245.0"  text="Email : " />
        <Text fx:id="emp_email" layoutX="180.0" layoutY="245.0" />
